<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ddling.repository.TagRepository">

    <resultMap id="tag" type="org.ddling.domain.Tag">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="metaTitle" property="metaTitle" />
        <result column="content" property="content" />
    </resultMap>

    <select id="getAllTags">
        select id, title, metaTitle, content from tag
    </select>

    <insert id="addTag">
        INSERT INTO tag(title, metaTitle, content) VALUES(#{title}, #{metaTitle}, #{content})
    </insert>

    <delete id="deleteTag">
        DELETE FROM tag WHERE id=#{id}
    </delete>

</mapper>
